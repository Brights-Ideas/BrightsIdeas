@model IList<Properties>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    @foreach (var property in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                    <img src="@property.Images.First()" alt="..." class="img-thumbnail">
                <div class="card-body">
                    <p class="card-text">@property.MainSummary</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            @Html.ActionLink("View", "Details", 
                                new { controller = "Home", propertyId = property.PropertyId}, 
                                new { @class="btn btn-md btn-outline-primary"})
                            @*<button type="button" class="btn btn-sm btn-outline-secondary">View</button>*@
                        </div>
                        <small class="text-muted">9 mins</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>